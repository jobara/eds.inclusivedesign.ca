{
    "sources": {
        "js": [
            "./*.js",
            "./src/**/*.js"
        ],
        "json": [
            "./*.json",
            "./src/**/*.json"
        ],
        "md": [
            "./*.md",
            "./src/**/*.md"
        ],
        "scss": [
            "./src/assets/styles/**/*.scss"
        ],
        "yaml": [
            "./*.yml",
            "./.github/**/*.yml"
        ]
    },
    "eslint": {
        "js": {
            "excludes": ["./src/locales"]
        }
    },
    "lintspaces": {
        "newlines": {
            "excludes": [
                "./src/locales"
            ]
        }
    },
    "markdownlint": {
        "excludes": ["./src/collections/**/*.md", "./CHANGELOG.md"]
    }
}
