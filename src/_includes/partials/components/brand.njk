            <div class="brand">
                {% if locale and locale !== config.defaultLanguage %}
                {% set homeUrl = "/" + config.languages[locale].slug %}
                {% else %}
                {% set locale = config.defaultLanguage %}
                {% set homeUrl = "/" %}
                {% endif %}

                <a rel="home" href="{{ homeUrl }}"{% if page.url === homeUrl %} aria-current="page"{% endif %}>{{ site[locale].name }}</a>
            </div>
